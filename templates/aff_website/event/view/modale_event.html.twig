<div class="wp-event">
    <div class="inner-event">
        <h3 class="goaff_event-fix">prochain Ã©venement</h3>
        <div class="w_titlevent">
            <h2 title="evenement de {{ website.namewebsite }}">{{ event.titre|lower|capitalize }}</h2>
            {% if event.description is not same as (" ") %}
                <h3>{{ event.description|raw|lower|capitalize }}</h3> {# {{post.subject|u.truncate(80, '...')|lower|capitalize}} #}
            {% endif %}
        </div>
        <time itemprop = "startDate" class="dateevent">mis en ligne le : {{ event.createAt|date("d-m-Y") }}</time>
        <time itemprop = "startDate" pubdate><b>du {{ event.appointment.starttime|date("d-m-Y") }} au {{ event.appointment.endtime|date("d-m-Y") }}</b></time>
        <div class="author">par : {{ event.author.name }}</div>
       {#  <a class=" button-wp" href="{{path('show_event',{'slugcity':website.locality.slugcity,'slug':website.slug, 'id':event.id }) }}">
            <button class="pop_button"><i class="fa fa-eye" aria-hidden="true"></i>>en savoir plus</button>
        </a>
       #}
    </div>

    <div class="illustr-event" >
        <div class="e_pictfull">
            {% if event.media.imagejpg|length > 0 and event.media.imagejpg[0].namefile is defined %}
                <img src="{{ asset(event.media.imagejpg[0].getWebPath) }}" alt="image affiche">
            {% endif %}
        </div>
    </div>
</div>



