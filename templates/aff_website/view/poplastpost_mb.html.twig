{% if lastpost.media.imagejpg[0].namefile is defined %}
    <img  class="bull-post-last_mb"src="{{ asset('upload/module/'~lastpost.media.imagejpg[0].namefile ) }}" alt="">
{% else %}
    <img class="bull-post-last_mb" src="{{ asset('img/pinsaffi.png') }}" alt="">
{% endif %}
<div class="pop-post-abs_v2">
    <div class="bef-post_v2">
        <div class="first_head_v2">
            <div class="scooped_v2">
                <div itemprop="title_v2" class="evnet_titre">
                    <h1 class="evnet_titre_v2">{{lastpost.titre}}</h1>
                </div>
            </div>
        </div>
        {% if lastpost.subject is not same as (" ") %}
        <div class="_fx-R_v2 _fx-convers_inv_v2">
            <div class="info-post_mb_v2">
                <div class="event_second_titl_v2">
                    <h3>{{lastpost.subject|u.truncate(80, '...')}}</h3>
                </div>
            </div>
        </div>
        {% endif %}
        <aside class="event_info_v2">
            <div class="meet-avs_v2">
                <div class="_l-bb1_v2">
                    <div class="_in-l-bb1-post_v2">
                        <span class="datepubli_event">mis en ligne le : <time itemprop = "startDate" pubdate><b>{{ lastpost.createAt|date("d-m-Y") }}</b></time>&nbsp;par&nbsp;</span>
                        <span class="datepubli_event">{{lastpost.author.name| upper}}</span>
                    </div>
                </div>
            </div>
        </aside>
    </div>
</div>



