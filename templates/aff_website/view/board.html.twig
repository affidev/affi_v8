        {%  else %}
            <div id="testmail">
                <add-comment slug="{{ website.slug }}"></add-comment>
            </div>
        {%  endif %}
    </div>
    <div class="af_rl af_flx-C w100 tglaff sty_affi" id="tgl_0">
        <div class="af_rl af_flx cent-cent pd15">
            <h2>Actualit√©s</h2>
        </div>
        <div class="card_module">
            {%  if notices['post'] is defined and notices['post']|length >0 %}
                <div class="board_module card_box">
                    {% set firstnotice = notices['post']|first %}
                    {%  if firstnotice is not null %}
                        {%  set ite = 1 %}
                        {%  if firstnotice.promo is not defined %}
