{% block body %}
<div class="_pg_wb-pb_v6">
    <div class="af_flx-C fx-c">
        {% if events|length >0 %}
        <div class="_pb_flx-r">
            <div class="tgl-65">
                <div class="fx-content_rep_event">
                    {{ include('aff_public/view/lasteventscity.html.twig') }}
                </div>
            </div>

            <div class="content_relat-fixed">
                <div class="fx-pw-dk-col">
                    <div class="_en-b_pb mt-5">
                        {# <div class="fx-content_rep_search">

                        </div> #}
                        <x-website class="w100" city="{{ city }}"></x-website>
                        <div class="container-text-info">
                            <div class="text-info">
                                <div class="info-af">
                                    <button class="btn-street text-switch shtext-switch bt_trans bulleswith" data-textswitch="tgl_0" data-action="nh">Les affiches</button>
                                    <span class="text-diveder"> | </span>
                                    <button class="btn-street text-switch bt_trans bulleswith" data-textswitch="tgl_1" data-action="sh">Les panneaux</button>
                                </div>
                            </div>
                        </div>
                        {#
                            <div class="bt-flex">
                                <div class="bulletoggle goaff_v6 mrg-l15" data-affitgl="tgl_1"><i class="fa fa-search"></i> tous</div>
                            </div>
                        #}
                    </div>
                </div>
            </div>
        </div>
        {%  else %}
        <div class="head_search">
            <div class="af_flx-C">
              {#   <x-website class="content_relat-search" city="{{ city }}"></x-website> #}
                <div class="container-text-info">
                    <div class="text-info">
                        <div class="info-af">
                            <button class="btn-street text-switch shtext-switch bulleswith" data-textswitch="tgl_0" data-action="nh">Les affiches</button>
                            <span class="text-diveder">  </span>
                            <button class="btn-street text-switch bulleswith" data-textswitch="tgl_1" data-action="sh">Les panneaux</button>
                        </div>
                    </div>
                </div>
            </div>
        </div>

            </div>

        {%  endif %}

        <section class="tglaff" id="tgl_0">
                <div class="web-inf">
                    <h3>dernières affiches publiées</h3>
                </div>
                <div class="fx-content_rep_v6">
                    {{ include('aff_public/view/lastnoticecity.html.twig') }}
                </div>

        </section>
        <!-- panneaux -->
        <section class="tglaff" id="tgl_1" style="display: none">
            <div class="soustitle-inf">
                <div class="list-soustitle">
                    {% for key, scop in scores %}
                        <button class="b_score">{{ key }}</button>
                    {%  endfor %}
                </div>
            </div>
            <div class="fx-content_rep_v6">
                {{ include('aff_public/view/noticeboard.html.twig') }}
            </div>
        </section>

        {{ include('footer/'~agent~'/affichange_footer_rel.html.twig') }}
    </div>
</div>
{%  endblock body %}
{% use "js/js_public.html.twig" %}
{% block javascripts %}
    {{ parent() }}
{% endblock %}


