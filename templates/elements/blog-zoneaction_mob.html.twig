{%  if entity.media.imagejpg[0] is defined  %}
    {%  set ill= entity.media.imagejpg[0].getwebPath %}
{%  else %}
    {%  set ill= "img/AffiChange.png" %}
{% endif %}
<div class="af_flx">
    <div class="pict-publi_mini">
        <div class="iner-illust" style="background-image: url('{{ asset(ill) }}')"></div>
    </div>

    <div class="in-op-pub">
        <h2>{{ entity.titre }}</h2>
        <div class="publiedby">publi√© le : {{ entity.createAt|date("j-m-Y") }}</div>
    </div>
</div>

{% if (dispatch.id is same as (entity.author.id))  or (dispatch.id == 1) %}
    <div class="tools-msg">
        <a class="e-tool" title="edition de l'affiche" href="{{ path('edit_post', {'id':entity.id}) }}"><i class=" fa fa-edit" data-descr="editer.."></i></a>
        <a class="e-tool" title="etat de la publication"  href="{{ path('publied_post', {'id':entity.id, 'board':board.id}) }}">
            {%  if entity.publied %}
                <div class="_icO-rd green"><i class="fa fa-flag-checkered" aria-hidden="true"></i></div>
            {% else %}
                <div class="_icO-rd red"><i class="fa fa-flag" aria-hidden="true"></i></div>
            {%  endif %}
        </a>
        <a class="e-tool" title="messagerie" href="{{ path('form-delete_post', {'id':entity.id}) }}"><i class=" fa fa-trash" data-descr="en bulle.."></i></a>
    </div>
{% endif %}


