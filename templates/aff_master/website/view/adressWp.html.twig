<div class="tglaff w100" id="tgl_0">
    <div class="inf_modul">
        <h2 class="_title til_mdl">{{ website.namewebsite }}</h2>
        <div class="fx-content">
            <div class="stape-process-lit" >
                <div id="listadressgp">
                {% if board.template.sector.adresse is defined %}
                    {% set adr=["","Principale","etablissement","livraison","facturation"] %}
                    {% for adrss in board.template.sector.adresse %}
                        <h5 data-adresse="in">Adresse {{ adr[adrss.choiceadress] }} :</h5>
                            <div class="list-adress">
                                <div class="dtl-adress">
                                    <div class="adrrss" id="{{ adrss.idMap }}">{{ adrss.label }}</div>
                                </div>
                                <div class="btn-adress">
                                    <button data-adress="{{ adrss.idMap }}"  class="modified btn btn-light">modifier cette adresse</button>
                                    {% if loop.index > 1 %}
                                        <button data-adress="{{ adrss.id }}"  class="deleted btn btn-alerte">supprimer</button>
                                    {% endif %}
                                </div>
                            </div>
                    {% endfor %}
                    <div class="separatemini"></div>
                    {% if board.template.sector.adresse | length < 3 %}
                        <button id="newadress" class="btn btn-light">ajouter une adresse</button>
                    {% endif %}
                {% else %}
                    <p>Entrez une adresse pour localiser votre point Info</p>
                    <em>Champ obiligatoire</em>
                    <em>Cette adresse sera visible sur vos modules publics</em>
                    <button id="modifadress" class="btn btn-light">ajouter une adresse</button>
                {% endif %}
            </div>
                <div class="new-adress_add">
                    <x-adress class="w100" name="no"  id="{{board.id}}" module="_website"></x-adress>
                </div>
            </div>
        </div>
    </div>
</div>




