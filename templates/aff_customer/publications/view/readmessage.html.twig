<div class="contener-msg">
    <div class="hscrool ii-cub-msg ii_ill" data-answer="1">
        <div class="list_convers">
            {% if  msgpublication is defined %}
                <div id="messg" data-wb="{{ website.slug }}" data-msg="{{ msgpublication.id }}">
                    {% for msg in msgpublication.msgs %}
                        <div class="_fx-convers _fx-center">
                            <div class="_co-gy">
                                {% if msg.createAt|format_datetime('short', 'none', locale='fr') is same as ("now"|format_datetime('short', 'none', locale='fr'))%}
                                    {{ msg.createAt|format_datetime('none', 'short', locale='fr') }}
                                {% else %}
                                    {{ msg.createAt|format_datetime(locale='fr')}}
                                {% endif %}
                            </div>
                        </div>
                        {% if msg.authordispatch is not null %}  {#  author = dispatch #}
                            {% if  msg.authordispatch.id is same as (dispatch.id) %}
                                <div class="_fx-convers_inv">
                                    <div class="iner-content-convers prop-convers">
                                        <div class="_p-inL">
                                            <p> {{ msg.bodyTxt |raw|nl2br}}</p>
                                        </div>
                                    </div>
                                </div>
                            {% else %}
                                    <div class="_fx-convers">
                                        <div class="iner-content-convers another-convers">
                                            <div class="auth-convers"W>
                                                    <span class="ini-dptch">{{ msg.authordispatch.name|slice(0, 1) }}</span>
                                                </div>
                                                <div class="inner-auth">
                                                    <span class="ini-auth">{{ msg.authordispatch.name }}</span>
                                                </div>
                                            </div>

                                            <div class="_p-inL">
                                                <p> {{ msg.bodyTxt |raw|nl2br}}</p>
                                            </div>

                                        </div>
                                    </div>
                            {% endif %}
                        {% else %}
                            <div class="_fx-convers">
                                <div class="iner-content-convers another-convers">

                                    <div class="auth-convers">
                                        <div class="_mini-bb-msg">
                                            <span class="avat-contact"><i class="fa fa-user-circle" aria-hidden="true"></i></span>
                                        </div>
                                        <div class="inner-auth">
                                            <h5>contact</h5>
                                            <span class="auth-mail">{{ msgpublication.contact.emailCanonical }}</span>
                                        </div>
                                    </div>

                                    <div class="_p-inL">
                                        <p> {{ msg.bodyTxt |raw|nl2br}}</p>
                                    </div>

                                </div>
                            </div>
                        {%  endif %}
                    {% endfor %}
                </div>
            {% endif %}
        </div>
        <div id="adcomment">
            <add-comment slug="{{ msgpublication.id }}" id="{{ post.id }}" module="add_blog"></add-comment>
        </div>
       {#  {{ include('aff_messagery/conversations/view/conversall.html.twig') }} #}
    </div>
</div>